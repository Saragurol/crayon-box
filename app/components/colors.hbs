{{!-- <button>Add Color</button> --}}
<div class="colors">
    {{@isName}}
    <div class='px-4 py-2'>
        <button type='button'
                class=' bg-blue-600 px-4 py-2 text-white hover:bg-indigo-600 hover:text-white border-white border-2  rounded-lg'>Add
                Color</button>
        <ul class='py-2'>
            {{#each @colors as |color|}}
            <li>
                <h3>
                    <LinkTo @route="color" @model={{@color}}
                        class='{{color.backgroundColor}} px-4 text-white hover:bg-indigo-600 hover:text-white rounded-lg'>
                        {{color.name}}
                    </LinkTo>
                </h3>
            </li>
            {{/each}}
        </ul>
    </div>

</div>